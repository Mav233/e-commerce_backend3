</a>

<script>
    const params = new URLSearchParams(window.location.search);

    if (params.get("added")) {
        setTimeout(() => {
            if (params.get("added") === "success") {
                showToast("Producto agregado al carrito ğŸ›’", true);
            }

            if (params.get("added") === "error") {
                showToast("No se pudo agregar el producto", false);
            }
        }, 100);
    }
</script>

</div>