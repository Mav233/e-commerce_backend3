    <!-- Toastify -->
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

    <script>
        function showToast(message, success = true) {
            Toastify({
                text: message,
                duration: 3000,
                gravity: "top",
                position: "right",
                close: true,
                style: {
                    background: success ? "#16a34a" : "#dc2626"
                }
            }).showToast();
        }
    </script>

