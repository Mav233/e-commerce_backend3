<div class="cart-container">

    <h1 class="cart-title">üõí Checkout</h1>

    {{#if cart.products.length}}

    <div class="cart-list">
        {{#each cart.products}}
        <div class="cart-item">

            {{#if this.product.thumbnails.length}}
            <img src="{{this.product.thumbnails.[0]}}" alt="{{this.product.title}}">
            {{/if}}

            <div class="cart-info">
                <h3>{{this.product.title}}</h3>
                <p>Precio unitario: ${{this.product.price}}</p>

                <div class="qty-controls">

                    <!-- DECREMENTAR -->
                    <form action="/carts/{{../cart._id}}/products/{{this.product._id}}/decrease" method="POST">
                        <button class="btn-qty">‚àí</button>
                    </form>

                    <span class="qty-number">{{this.quantity}}</span>

                    <!-- INCREMENTAR -->
                    <form action="/carts/{{../cart._id}}/products/{{this.product._id}}/increase" method="POST">
                        <button class="btn-qty">+</button>
                    </form>

                </div>

                <p class="subtotal">
                    Subtotal: ${{multiply this.quantity this.product.price}}
                </p>
            </div>

            <!-- ELIMINAR -->
            <form action="/carts/{{../cart._id}}/products/{{this.product._id}}/delete" method="POST">
                <button class="btn-remove">üóë Eliminar</button>
            </form>

        </div>
        {{/each}}
    </div>

    <a href="/products" class="btn-primary">‚Üê Seguir comprando</a>

    {{else}}
    <p>El carrito est√° vac√≠o</p>
    {{/if}}

</div>

<div class="cart-summary">
    <h2>Resumen del carrito</h2>

    <form action="/carts/{{cart._id}}/checkout" method="POST">
        <button type="submit" class="btn-checkout">
            Finalizar compra
        </button>
    </form>
</div>

</div>